{
  "name": "nicolaz-react-library-boilerplate",
  "version": "0.1.0",
  "private": true,
  "description": "An awesome React Component library",
  "main": "dist/rc.cjs.js",
  "module": "dist/rc.esm.js",
  "style": "dist/rc.css",
  "scripts": {
    "start": "rollup -c -w --environment NODE_ENV:development",
    "build": "rollup -c --environment NODE_ENV:production",
    "prepublishOnly": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": "eslint"
  },
  "keywords": [
    "library",
    "react-component"
  ],
  "peerDependencies": {
    "react": "16.x",
    "react-dom": "16.x"
  },
  "devDependencies": {
    "@hammal/babel-preset-app": "^0.11.1",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.0.0",
    "eslint-config-nicolaz": "^0.6.3",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "node-sass": "^7.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-url": "^8.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rollup": "^1.27.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "files": [
    "dist"
  ],
  "dependencies": {}
}
